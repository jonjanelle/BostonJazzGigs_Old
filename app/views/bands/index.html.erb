<% provide(:title, "View Bands") %>
<div class="container-fluid nav-buffer">
  <div class="row text-center">
    <div class="col-lg-12 text-center sr-contact">
      <h2 class="section-heading">Browse All Bands</h2>
      <hr class="primary">
    </div>
  </div>

  <div class="row">
    <% @bands.each do |band| %>
    <div class="col col-md-6 col-xs-12">
      <div class="band-tile sr-button">
        <div class="row text-center">
          <div class="col col-md-12">
            <h2>
              <a href="<%= band_path(band.id) %>"><%= band.name %></a>
            </h2>
          </div>
        </div>
        <div class="row padded-10">
          <div class="col col-md-6 col-xs-12">
            <% if band.image? %>
              <%= image_tag band.image, class: "img-responsive img-rounded band-pic-sm" %>
            <% else %>
              <img class="img-responsive img-rounded band-pic-sm" src="http://lorempixel.com/400/200/" alt="">
            <% end %>
          </div>

            v<div class="col col-md-6 col-xs-12">
            <div class="band-tile-subheading">Audio Samples</div>
            <% if band.songdemo1!=nil %>
              <audio controls>
                <source src="<%= band.songdemo1 %>" type="audio/mpeg">
                Your browser does not support the audio element.
              </audio>
            <% else %>
              Sorry, no samples are available for this artist!
            <% end %>
          </div>
        </div>

        <!--end row-->
        <div class="row text-center">
          <div class="col col-md-12">
            <div class="band-tile-content"><%= band.description %></div>
          </div>
        </div>
      </div>
    </div>

    <% end %>
  </div>
  <!-- /.row -->
</div>
<!-- container-fluid -->
