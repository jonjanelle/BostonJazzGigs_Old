<%= form_with(model: @band, local: true) do |form| %>
<% if @band.errors.any? %>
<div class="alert alert-danger alert-dismissible fade in" role=alert>
  <button type=button class=close data-dismiss=alert aria-label=Close>
    <span aria-hidden=true>&times;</span>
  </button>
  <h2><%= pluralize(@band.errors.count, "error") %>
    prohibited this band from being saved:</h2>
  <ul>
    <% @band.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :name %><br>
  <%= form.text_field :name, id: :band_name %>
</div>

<div class="field">
  <%= form.label :genre %><br>
  <%= form.text_field :genre, id: :band_genre %>
</div>

<div class="field">
  <%= form.label :description %><br>
  <%= form.text_field :description, id: :band_description %>
</div>

<div class="field">
  <%= form.label :image %><br>
  <%= form.text_field :image, id: :band_image %>
</div>

<div class="field">
  <%= form.label :songdemo %><br>
  <%= form.text_field :songdemo, id: :band_songdemo %>
</div>

<div class="field">
  <%= form.label :zipcode %><br>
  <%= form.text_field :zipcode, id: :band_zipcode %>
</div>

<div class="field">
  <%= form.label :radius %><br>
  <%= form.number_field :radius, id: :band_radius %>
</div>
<br>
<div class="actions">
  <%= form.submit %>
</div>
<% end %>
