<!-- Page Content -->
<div class="container-fluid nav-buffer">
  <p id="notice"><%= notice %></p>
  <a href="/bands" class="btn btn-default">
    <span class="glyphicon glyphicon-triangle-left"></span>
    back to browsing
  </a>
  <!-- Jumbotron Header -->
  <div class="jumbotron hero-spacer text-center">
    <h1><%= @musician.firstname + " " + @musician.lastname %></h1>
    <h3>Instrument:
      <%= @musician.instrument %></h3>
    <p><%= @musician.bio %></p>
    <p>
      <a href="#" class="btn btn-primary">Contact Musician Now</a>
      <%= link_to 'Edit Musician Info', edit_musician_path(@musician), class: "btn btn-info" %>
    </p>
  </div>

  <hr>

  <!-- Title -->
  <div class="row">
    <div class="col-lg-12">
      <h3>Associated Bands</h3>
    </div>
  </div>
  <!-- /.row -->

  <!-- Page Features -->
  <div class="row text-center">
    <% @musician.bands.each do |band| %>
    <div class="col-md-3 col-sm-6 hero-feature">
      <div class="thumbnail">
        <img src="http://placehold.it/800x500" alt="">
        <div class="caption">
          <h3><%= band.name %></h3>
          <p>
            <%= link_to 'More Info', band_path(band.id), class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <!-- /.row -->
</div>
