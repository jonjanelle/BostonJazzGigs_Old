<% provide(:title, "Login") %>
<div class="container nav-buffer">
  <a href="/" class="btn btn-default">
    <span class="glyphicon glyphicon-triangle-left"></span>
    back home
  </a>
  <div class="jumbotron hero-spacer text-center alert-success">
    <h1>Login</h1>
  </div>

  <div class="container">
    <% if !logged_in? %>
      <%= form_for :session, url: login_path do |form| %>
        <div class="field form-group">
          <%= form.label :email, "E-mail Address" %><br>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= form.label :password %><br>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <%= form.submit class: "btn btn-primary btn-lg btn-block",  value: "Login" %>
        <br>
        <p>New user? <%= link_to "Create a musician/band account", bands_newacct_path %> or
          <%= link_to "Create a standard account", new_user_path %>
        </p>
      <% end %>
      <% else %>
        <div class="alert alert-warning text-center"><h3>You are already logged in. </h3></div>
        <h3 class="text-center">
          <%= link_to "Log out", logout_path, method: :delete %> or
          <%= link_to "View User Profile", current_user %>?
        </h3>

    <% end %>
  </div>
</div>
